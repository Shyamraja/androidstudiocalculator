<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
    android:background="@android:color/holo_green_light">


        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn6"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="230dp"
            android:text="9"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/btn9"
            android:text="8" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn9"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btn8"
            android:text="7" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn9"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/btn7"
            android:text="/"
            android:layout_marginStart="-6dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="187dp"
            android:text="6" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn8"
            android:layout_alignTop="@+id/btn6"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-1dp"
            android:text="5" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn6"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/btndiv"
            android:text="4" />

        <Button
            android:id="@+id/btnmul"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btndiv"
            android:layout_alignTop="@+id/btn6"
            android:text="*" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="132dp"
            android:text="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="-1dp"
            android:text="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn3"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/btndiv"
            android:text="1" />

        <Button
            android:id="@+id/btnsum"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn3"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/btn1"
            android:text="+" />

        <Button
            android:id="@+id/btncl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:text="CLEAR" />

        <Button
            android:id="@+id/btneql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn4"
            android:layout_alignBottom="@+id/btncl"
            android:text="=" />

        <Button
            android:id="@+id/btnsub"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btncl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/btneql"
            android:text="-" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn2"
            android:layout_alignTop="@+id/btncl"
            android:text="0" />

        <TextView
            android:id="@+id/tvRESULT"
            android:layout_width="372dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvCOMPUTE"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/tvRESULT"
            android:layout_alignParentTop="true"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="-12dp" />
    </RelativeLayout>

